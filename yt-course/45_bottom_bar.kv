MDBoxLayout:
    orientation: 'vertical'

    MDTopAppBar:
        title: "Our Top Tool Bar"
        left_action_items: [["menu"]]
        right_action_items: [["dots-vertical"]]

    MDLabel:
        id: my_label
        text: "Some Stuff"
        halign: "center"

    MDBottomAppBar:
        MDTopAppBar:
            icon: "git"
            left_action_items: [["menu", lambda x: app.presser()]]
            title: "Bottom Menu"
            type: "bottom"
            mode: "end"
            #mode: "free-end"
            #mode: "center"
            # Click the button
            on_action_button: app.presser()